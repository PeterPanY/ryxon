{
  "name": "ryxon",
  "version": "2.0.4",
  "description": "Components built on Vue",
  "type": "module",
  "main": "lib/ryxon.cjs.js",
  "module": "es/index.mjs",
  "style": "lib/index.css",
  "typings": "lib/index.d.ts",
  "unpkg": "lib/ryxon.min.js",
  "jsdelivr": "lib/ryxon.min.js",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./es/index.mjs",
      "require": "./lib/ryxon.cjs.js"
    }
  },
  "files": [
    "es",
    "lib"
  ],
  "scripts": {
    "dev": "ryxon-cli dev",
    "lint": "ryxon-cli lint",
    "test": "vitest run",
    "build": "ryxon-cli build",
    "build:site": "ryxon-cli build-site",
    "release": "cp ../../README.md ./ && ryxon-cli release --gitTag && rm ./README.md",
    "release:site": "pnpm build:site && npx gh-pages -d site-dist --add",
    "test:update": "vitest run -u",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "open:coverage": "open test/coverage/lcov-report/index.html"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PeterPanY/ryxon.git",
    "directory": "packages/ryxon"
  },
  "bugs": "https://github.com/PeterPanY/ryxon/issues",
  "author": "PeterPanY",
  "license": "MIT",
  "keywords": [
    "ui",
    "vue",
    "vue3",
    "frontend",
    "component",
    "components"
  ],
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^3.6.0",
    "@popperjs/core": "^2.11.8",
    "@ryxon/use": "^1.2.0",
    "@vueuse/core": "^13.1.0",
    "dayjs": "^1.11.7",
    "escape-html": "^1.0.3",
    "normalize-wheel-es": "^1.2.0"
  },
  "devDependencies": {
    "@ryxon/cli": "workspace:*",
    "@ryxon/eslint-config": "workspace:*",
    "@ryxon/icons": "workspace:*",
    "@ryxon/utils": "workspace:*",
    "@types/node": "^22.14.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitejs/plugin-vue-jsx": "^4.1.2",
    "@vitest/coverage-istanbul": "^3.1.1",
    "@vue/runtime-core": "^3.4.26",
    "@vue/test-utils": "^2.4.6",
    "csstype": "^3.1.3",
    "diffable-html": "^6.0.1",
    "jsdom": "^25.0.1",
    "type-fest": "^2.14.0",
    "typescript": "^5.4.5",
    "vite": "^5.4.18",
    "vitest": "^3.1.1",
    "vitest-canvas-mock": "^0.3.3",
    "vue": "^3.4.26",
    "vue-router": "^4.3.2"
  },
  "sideEffects": [
    "es/**/style/*",
    "lib/**/style/*",
    "*.css"
  ],
  "web-types": "lib/web-types.json"
}
